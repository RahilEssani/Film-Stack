@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var data = HttpContextAccessor.HttpContext.Session.GetString("userID");
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmStack_AdminPanel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
@*   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 *@ <link rel="stylesheet" href="~/css/site.css" /> 
<link rel="stylesheet" href="~/FilmStack.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"/>
 
    <link rel="stylesheet" href="~/css/style.css" />
     
    <title>Admin Dashboard</title>
</head>
  <body id="body">
    <div class="container-new">
     <nav class="navbar-new">
        <div class="nav_icon" onclick="toggleSidebar()">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <div class="navbar__left">
          <h3>Admin Panel of Film Stack</h3>
        </div>
        <div class="navbar__right">
            <a asp-controller="Home" asp-action="Index">
               <span class="fa fa-home"></span>
           </a>
            <a asp-controller="Home" asp-action="Search"><span class="fa fa-search"></span></a>
            <a>
            <img width="30" src="~/images/avatar.svg" alt="" />
            </a>
            <!-- <i class="fa fa-user-circle-o" aria-hidden="true"></i> -->
           
          
        </div>
      </nav>

     <main style="overflow:hidden">
        <div class="main__container" id="main__">
            <partial name="~/Views/Shared/_Dashboard.cshtml" model=@Model />
       </div>
      </main>

     <div id="sidebar-new">
        <div class="sidebar__title">
          <div class="sidebar__img">
            <img src="~/images/logo.png" alt="logo" />
          </div>
          <i
            onclick="closeSidebar()"
            class="fa fa-times"
            id="sidebarIcon"
            aria-hidden="true"
          ></i>
        </div>

        <div class="sidebar__menu">
          <div class="sidebar__link active_menu_link one" onclick="clck(this)">
            <i class="fa fa-home"></i>
            <a>Dashboard</a>
          </div>
        @if(data == "rahil@gmail.com")
        {
            <h2>Approvals</h2>
            <div class="sidebar__link two" onclick="clck(this)">
            <i class="fa fa-user-secret" aria-hidden="true"></i>
            <a>Admin Management</a>
            </div>
        }
          <h2>Manage</h2>
          <div class="sidebar__link three" onclick="clck(this)">
            <i class="fa fa-question"></i>
            <a>Add Movie</a>
          </div>
          <div class="sidebar__logout">
            <i class="fa fa-power-off"></i>
            <a href="/Account/Logout">Log out</a>
          </div>
        </div>
      </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @**@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
